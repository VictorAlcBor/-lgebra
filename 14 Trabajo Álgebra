import matplotlib.pyplot as plt
import numpy as np

# Puntos
datos_x = [-1, 1, 2, 2]
datos_y = [-1, 2, 2, 1]

# Recta: y = 5x/6 + 1/6
x_recta = np.linspace(-2, 3, 100)  # Valores de x
y_recta = (5/6) * x_recta + (1/6)  # Valores de y

# Graficar puntos y recta
plt.scatter(datos_x, datos_y, label="Puntos")  # Puntos
plt.plot(x_recta, y_recta, label="Recta: y = 5x/6 + 1/6")  # Recta

# Etiquetas y leyenda
plt.xlabel("X")
plt.ylabel("Y")
plt.legend()

# Mostrar el gr√°fico
plt.show()
